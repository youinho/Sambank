<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
    xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">
        
        
        <!-- <beans:bean id="userDetailsService" class="org.springframework.security.core.userdetails.jdbc.JdbcDaoImpl"> <beans:property name="dataSource" ref="dataSource"/> </beans:bean> -->

        <beans:bean id="bcryptPasswordEncoder" class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder" />
        
        
    <!-- 검사 URL -->
    <http auto-config='true'  use-expressions="true">
        <intercept-url pattern="/admin/login" access="permitAll" /> 
        <intercept-url pattern="/admin/**" access="hasAnyRole('ROLE_1,ROLE_5,ROLE_10')" />
        
		<!-- <form-login />
   		<logout /> -->
        <form-login login-page="/admin/login" 
			        default-target-url="/admin/notice" 
			        authentication-failure-url="/admin/login?error" 
			        username-parameter="id" 
			        password-parameter="password" /> 
        <logout invalidate-session="true"
        		logout-url="/admin/logout" 
        		logout-success-url="/admin/login" />
       <access-denied-handler error-page="/?error" />
		<session-management invalid-session-url="/admin/login">

        	<concurrency-control max-sessions="1" expired-url="/admin/login"/>

    	</session-management>
    	<session-management invalid-session-url="/login" session-fixation-protection="changeSessionId">

		    <concurrency-control max-sessions="1" expired-url="/login" />
		
		</session-management>

        <csrf disabled="false"/>
    </http>
    
    
     <beans:bean id="userDetailsService" class="org.springframework.security.core.userdetails.jdbc.JdbcDaoImpl">
        <beans:property name="dataSource" ref="ds"/>
    </beans:bean>
    
    
    

    
    
    <!--  provider  -->
    <authentication-manager>
        <authentication-provider>
            <jdbc-user-service data-source-ref="ds" role-prefix="" users-by-username-query="select id, password, enabled from admintbl2 where id = ?" authorities-by-username-query="select id, authority from admin_authorities where id = ?" group-authorities-by-username-query="select g.id, g.group_name, ga.authority from admin_groups g, admin_group_members gm, admin_group_authorities ga where gm.id = ? and g.id = ga.group_id and g.id = gm.group_id" />

            
        </authentication-provider>
    </authentication-manager>
    
</beans:beans>